{
  "compilerOptions": {
    "rootDir": "src",
    "composite": true,
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "strictBindCallApply": true
  },
  "references": [
    {
      "path": "../rrweb-snapshot"
    }
  ],
  "compileOnSave": true,
  "include": ["src", "../rrweb/src/record/workers/workers.d.ts"]
}
